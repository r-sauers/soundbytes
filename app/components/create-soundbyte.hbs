<div id="create-soundbyte" style="border-style: solid; margin: 1em; padding: 1em;">

    <button id="close" type="button" {{on "click" this.close}}>X</button>
    <p>Create a New Soundbyte</p>

    {{#if this.started}}
        <button id="recordBtn" type="button" {{on "click" this.toggleRecording}}>
            {{#if this.isRecording}}
                ❚❚
            {{else}}
                ▶
            {{/if}}
        </button>
        <button id="playbackNewAudioBtn" type="button" {{on "click" this.playbackAudio}}>Playback</button>
        <button id="resetAudioBtn" type="button" {{on "click" this.resetRecorder}}>↺</button>
        <button id="commitRecording" type="button" {{on "click" this.commitSoundbyte}}>Submit</button>
        <input type="file" accept="audio/webm, audio/mp3" onchange={{this.handleAudioFile}}/>   
    {{else}}
        <button id="start-create" type="button" {{on "click" this.start}}>+</button>
    {{/if}}
</div>